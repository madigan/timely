{
  "name": "timely-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run --cwd packages/frontend dev\" \"bun run --cwd packages/backend dev\"",
    "build": "bun run --cwd packages/frontend build && mkdir -p packages/backend/static && cp -r packages/frontend/dist/* packages/backend/static/",
    "start": "bun run --cwd packages/backend start",
    "test": "bun run --cwd packages/frontend test:unit",
    "type-check": "bun run --cwd packages/frontend type-check",
    "lint": "biome lint packages/",
    "lint:fix": "biome lint --write packages/",
    "format": "biome format packages/",
    "format:write": "biome format --write packages/",
    "check": "biome check packages/",
    "check:fix": "biome check --write packages/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}